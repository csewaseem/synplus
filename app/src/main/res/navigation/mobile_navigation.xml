<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home_screen">

    <fragment
        android:id="@+id/nav_home_screen"
        android:name="com.syncplus.weather.ui.home.HomeScreenFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_screen_to_nav_city_screen"
            app:destination="@id/nav_city_screen" />
        <action
            android:id="@+id/action_nav_home_screen_to_nav_settings"
            app:destination="@id/nav_settings" />
    </fragment>

    <fragment
        android:id="@+id/nav_city_screen"
        android:label="@string/location"
        android:name="com.syncplus.weather.ui.city.CityScreenFragment"
        tools:layout="@layout/fragment_city" >
        <argument
            android:name="weatherArg"
            app:argType="com.syncplus.weather.model.CityWeather" />
        <action
            android:id="@+id/action_nav_city_screen_to_nav_help_screen"
            app:destination="@id/nav_help_screen" />
    </fragment>
    <fragment
        android:id="@+id/nav_help_screen"
        android:label="@string/help"
        android:name="com.syncplus.weather.ui.city.HelpScreenFragment"
        tools:layout="@layout/fragment_help" />
    <fragment
        android:id="@+id/nav_settings"
        android:label="@string/action_settings"
        android:name="com.syncplus.weather.ui.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings" />
</navigation>